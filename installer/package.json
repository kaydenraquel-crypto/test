{
  "name": "novasignal-installer",
  "version": "1.0.0",
  "description": "Professional installer for NovaSignal Trading Platform",
  "main": "src/main.js",
  "private": true,
  "author": "NovaSignal Team",
  "license": "MIT",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "npm run build:all",
    "build:all": "concurrently \"npm run build:windows\" \"npm run build:macos\" \"npm run build:linux\"",
    "build:windows": "electron-builder --config electron-builder.config.js --win",
    "build:macos": "electron-builder --config electron-builder.config.js --mac", 
    "build:linux": "electron-builder --config electron-builder.config.js --linux",
    "clean": "rimraf dist build",
    "test": "mocha test/**/*.test.js",
    "test:watch": "mocha test/**/*.test.js --watch",
    "test:coverage": "nyc mocha test/**/*.test.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "electron": "^28.0.0",
    "electron-updater": "^6.1.7",
    "electron-store": "^8.1.0",
    "electron-log": "^5.0.1",
    "node-fetch": "^3.3.2",
    "semver": "^7.5.4"
  },
  "devDependencies": {
    "electron-builder": "^24.9.1",
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5",
    "jest": "^29.7.0",
    "spectron": "^19.0.0",
    "chai": "^4.3.10",
    "sinon": "^17.0.1",
    "mocha": "^10.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}