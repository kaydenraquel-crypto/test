{
  "name": "novasignal-installer",
  "version": "1.0.0",
  "description": "Professional installer for NovaSignal Trading Platform",
  "main": "src/main.js",
  "private": true,
  "author": "NovaSignal Team",
  "license": "MIT",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "npm run build:all",
    "build:all": "concurrently \"npm run build:windows\" \"npm run build:macos\" \"npm run build:linux\"",
    "build:windows": "electron-builder --win",
    "build:macos": "electron-builder --mac", 
    "build:linux": "electron-builder --linux",
    "clean": "rimraf dist build",
    "test": "jest"
  },
  "build": {
    "appId": "com.novasignal.trading",
    "productName": "NovaSignal Trading Platform",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../backend",
        "to": "backend",
        "filter": [
          "**/*",
          "!__pycache__",
          "!*.pyc",
          "!.venv"
        ]
      },
      {
        "from": "assets/frontend",
        "to": "frontend"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icons/icon.ico",
      "certificateFile": "certificate.p12",
      "certificatePassword": "",
      "publisherName": "NovaSignal LLC"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "assets/icons/installer.ico",
      "uninstallerIcon": "assets/icons/uninstaller.ico",
      "installerHeaderIcon": "assets/icons/installer-header.ico",
      "installerSidebar": "assets/images/installer-sidebar.bmp",
      "uninstallerSidebar": "assets/images/installer-sidebar.bmp",
      "license": "../LICENSE",
      "warningsAsErrors": false,
      "runAfterFinish": true
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icons/icon.icns",
      "category": "public.app-category.finance",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist"
    },
    "dmg": {
      "title": "${productName}",
      "icon": "assets/icons/icon.icns",
      "background": "assets/images/dmg-background.png",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icons/icon.png",
      "category": "Office",
      "desktop": {
        "Name": "NovaSignal Trading Platform",
        "Comment": "Professional Trading Platform",
        "Keywords": "trading;finance;crypto;stocks;"
      }
    },
    "publish": {
      "provider": "github",
      "owner": "your-username", 
      "repo": "NovaSignal_v0_2",
      "private": true
    }
  },
  "dependencies": {
    "electron": "^28.0.0",
    "electron-updater": "^6.1.7",
    "electron-store": "^8.1.0",
    "node-fetch": "^3.3.2",
    "semver": "^7.5.4"
  },
  "devDependencies": {
    "electron-builder": "^24.9.1",
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5",
    "jest": "^29.7.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}